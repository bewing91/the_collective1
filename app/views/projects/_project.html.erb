<li id="project-<%= project.id %>">
	<div class="name"><B><%= project.name %></B> <%= link_to 'Edit', edit_project_path(project) %> <%= link_to 'Delete', project_path(project), :method => :delete, :confirm => "Are you sure?" %></div>
	<div class="media">
		<% proj_string = project.content_type.to_s %>
		<% if proj_string.start_with? 'image' %>
			<%= image_tag project.media.url(:thumb) if project.media? %>
		<% elsif proj_string.start_with? 'audio' %>
			[ Audio Player ]
		<% elsif proj_string.start_with? 'video' %>
			[ Video Player ]
		<% else %>
			You are a bug in the system. AHHH SKYNET!
		<% end %>
	</div>

	<div class="description"><%= project.description %></div>
	<div class="timestamp">Posted <%= time_ago_in_words(project.created_at) %> ago | Last 			Updated <%= time_ago_in_words(project.updated_at) %> ago.</div>
	<BR>
</li>